#!/usr/bin/env bash
#MISE description="Watch and rebuild on changes (full dev workflow)"
#MISE depends=["setup-vault"]

set -euo pipefail

echo "ðŸ”§ Kanban Bases View - Development Mode"
echo ""

# Build once
echo "Initial build..."
mise run build

# Symlink to vault
bash tools/symlink.sh

echo ""
echo "Setup complete. Starting watch mode..."
echo ""

# Watch for changes with esbuild
tsc -noEmit
node esbuild.config.mjs --watch
